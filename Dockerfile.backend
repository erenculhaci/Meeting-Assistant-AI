# Backend + ML Scripts Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    ffmpeg \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip install --upgrade pip

# Install PyTorch CPU version FIRST (before any other packages)
# Using compatible versions to avoid torchvision::nms error
RUN pip install torch==2.1.0 torchaudio==2.1.0 torchvision==0.16.0 --index-url https://download.pytorch.org/whl/cpu

# Pin numpy to 1.x to avoid compatibility issues
RUN pip install "numpy<2"

# Copy and install backend requirements
COPY webapp/backend/requirements.txt /app/backend_requirements.txt
RUN pip install --no-cache-dir -r /app/backend_requirements.txt

# Install ML dependencies
# Pin pyannote.audio to 3.1.1 and compatible dependencies
# Pin numpy<2 AFTER all installations to ensure compatibility
RUN pip install --no-cache-dir \
    openai-whisper \
    "pyannote.audio==3.1.1" \
    "pytorch-lightning==2.1.0" \
    "lightning==2.1.0" \
    "transformers>=4.30.0,<4.40.0" \
    librosa \
    soundfile \
    pydub \
    groq \
    openai \
    sentence-transformers \
    dateparser \
    spacy \
    pydantic[email] \
    matplotlib \
    && pip install --no-cache-dir "numpy<2" --force-reinstall

# Download spacy model
RUN python -m spacy download en_core_web_sm

# Copy ML script modules
COPY speech_recognition /app/speech_recognition
COPY summarization /app/summarization
COPY action_item_extraction /app/action_item_extraction

# Copy backend application
COPY webapp/backend /app

# Create necessary directories
RUN mkdir -p /app/uploads /app/outputs

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
